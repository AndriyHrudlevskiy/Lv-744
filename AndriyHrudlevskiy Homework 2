4 TASK

using System;

namespace ConsoleApp3
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Dog dog;
            dog.name = "Bobik";
            dog.mark = "spotted";
            dog.age = "3 years";
        dog.Info();
        Console.ReadLine();
        }
    }
    struct Dog
    {
        public string name;
        public string mark;
        public string age;

        public void Info()
        {
            Console.WriteLine("age of the dog : " + age);
            Console.WriteLine("mark of the dog : " + mark);
            Console.WriteLine("name of the dog : " + name);
        }
    }
}
